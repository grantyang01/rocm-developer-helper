# Local Configuration Template
# 
# Instructions:
#   1. Copy this file to config.local.yaml
#   2. Fill in your personal values
#   3. config.local.yaml is gitignored and won't be committed
#
# Usage:
#   Copy-Item config.local.yaml.example config.local.yaml

# Common paths (using YAML anchors for reuse)
paths:
  WORK_DIR: &WORK_DIR "C:\\work"
  SHISA_ROOT: &SHISA_ROOT "C:\\work\\shisa"

devtools:
  git:
    user_name: "your-git-username"
    git_email: "your.email@amd.com"
  p4:
    port: "your-p4-server:port"
    user: "your-p4-username"
    client: "your-client-name"
    root: *SHISA_ROOT
    view: "//depot/path/to/your/project/..."

SHISA:
  SHISA: *SHISA_ROOT
  
  # Remote SHISA Linux development environment (optional)
  # Uncomment and configure if using remote Linux machine for SHISA development
  # remote:
  #   # SSH connection string (username@hostname)
  #   SHISA_REMOTE: "username@hostname"
  #   
  #   # Remote machine configuration
  #   # - SP3_ASIC: ASIC name on remote machine (e.g., MI300, NAVI31)
  #   # - TT_OPTS: '-a GFX9' for Vega/MI, '-nd' for Navi
  #   SHISA_REMOTE_CONFIG: "SP3_ASIC=MI300 TT_OPTS='-a GFX9'"
  #   
  #   # Port for remote server (each user should use a different port to avoid conflicts)
  #   SHISA_REMOTE_SERVER_PORT: 9339
  #   
  #   # Local port for port forwarding (optional, defaults to 19339)
  #   SHISA_LOCAL_SERVER_PORT: 19339

conductor:
  # Conductor API configuration
  # To get your API key:
  #   1. Go to https://conductor.amd.com
  #   2. Open your profile settings
  #   3. Generate or copy your API key
  api_key: "your-conductor-api-key-here"
  
  # Reservation defaults
  reservation:
    title: "Development"
    project: "your-project"
    description: "Development work"
    allocation_team: "your-team-name"
    users:
      - "your-username"
      - "optional-second-user"
    systems:
      - "machine-hostname-1"
      - "machine-hostname-2"
